<!-- Modal Cart -->
<div class="modal fade modal-cart" id="cartModal" tabindex="-1" role="dialog" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cartModalLabel">You have {{cart.size}} items in your bag</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                {{#each cart}}
                    <div class="media">
                        <!--<a href="/detail"><img src="images/product/1.jpg" width="50" height="50"></a>-->
                        <div class="media-body">
                            <a id="{{ticketID}}-name" href="/detail" title="NEW Microsoft Surface Go">{{_id}}</a>
                            {{quantity}} x<span id="{{ticketID}}-price" class="price">$549.00</span>
                            <button id="deleteItem" tid="{{ticketID}}" type="button" class="close" aria-label="Close">
                                <i class="fa fa-trash-o"></i>
                            </button>
                        </div>
                    </div>
                    <script>
                        setupCartDetails("{{ticketID}}", {{quantity}});
                    </script>
                {{/each}}
            </div>
            <div class="modal-footer">
                <div class="box-total">
                    <h4>Subtotal: <span id="subtotal" class="price"></span></h4>
                    <a href="/cart" class="btn btn-success">VIEW CART</a>
                </div>
            </div>
        </div>
